---
// src/layouts/Layout.astro
import '../styles/global.css'; // Import the global stylesheet

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Markdown to HTML Converter" />
    {/* Ensures proper rendering and touch zooming on mobile */}
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body class="flex min-h-screen flex-col items-center bg-gray-100 py-10 font-sans text-gray-900 dark:bg-gray-900 dark:text-gray-100">
    <main class="container mx-auto w-full max-w-5xl px-6">
      <slot /> {/* Page content goes here */}
    </main>
  </body>
</html>
